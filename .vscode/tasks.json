{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "New Writeup",
            "type": "shell",
            "command": "./tools/new_writeup.sh",
            "args": [
                "${input:challengeName}",
                "${input:difficulty}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Create a new writeup from template"
        },
        {
            "label": "Update Progress",
            "type": "shell",
            "command": "python3",
            "args": [
                "./tools/update_progress.py",
                "${input:challengeNameForProgress}",
                "${input:status}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Update challenge progress status in README"
        },
        {
            "label": "Generate Payload",
            "type": "shell",
            "command": "python3",
            "args": [
                "./tools/payload_generator.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run the payload generator tool"
        },
        {
            "label": "View LockIT Pro Reference",
            "type": "shell",
            "command": "code",
            "args": [
                "./tools/LockIT-PRO_REF.md"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Open MSP430 architecture reference"
        }  
    ],
    "inputs": [
        {
            "id": "challengeName",
            "description": "Challenge Name (e.g., 'Tutorial', 'New Orleans')",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "difficulty",
            "description": "Challenge Difficulty",
            "default": "beginner",
            "type": "pickString",
            "options": [
                "beginner",
                "intermediate", 
                "advanced",
                "expert"
            ]
        },
        {
            "id": "challengeNameForProgress",
            "description": "Challenge Name for Progress Update",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "status",
            "description": "Progress Status",
            "default": "WIP",
            "type": "pickString",
            "options": [
                {
                    "label": "TODO - Not Started",
                    "value": "TODO"
                },
                {
                    "label": "WIP - Work In Progress",
                    "value": "WIP"
                },
                {
                    "label": "DONE - Completed",
                    "value": "DONE"
                },
                {
                    "label": "STUCK - Failed/Stuck", 
                    "value": "STUCK"
                }
            ]
        }
    ]
}